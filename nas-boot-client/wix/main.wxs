<?xml version='1.0' encoding='windows-1252'?>

<?if $(sys.BUILDARCH) = x64 or $(sys.BUILDARCH) = arm64?>
    <?define PlatformProgramFilesFolder = "ProgramFiles64Folder"?>
<?else?>
    <?define PlatformProgramFilesFolder = "ProgramFilesFolder"?>
<?endif?>

<Wix xmlns='http://schemas.microsoft.com/wix/2006/wi'
    xmlns:util="http://schemas.microsoft.com/wix/UtilExtension">

    <Product
        Id='*'
        Name='NAS Boot Client'
        UpgradeCode='6CFD3C18-D5B1-4ECA-80AE-27F0BA4602CD'
        Manufacturer='Daniel Gehriger'
        Language='1033'
        Codepage='1252'
        Version='$(var.Version)'>

        <Package Id='*'
            Keywords='Installer'
            Description='Client for NAS boot service'
            Manufacturer='Daniel Gehriger'
            InstallerVersion='450'
            Languages='1033'
            Compressed='yes'
            InstallScope='perMachine'
            SummaryCodepage='1252'
        />

        <MajorUpgrade
            Schedule='afterInstallInitialize'
            DowngradeErrorMessage='A newer version of [ProductName] is already installed. Setup will now exit.' />

        <Media Id='1' Cabinet='media1.cab' EmbedCab='yes' DiskPrompt='CD-ROM #1' />
        <Property Id='DiskPrompt' Value='NAS Boot Client Installation' />

        <Directory Id='TARGETDIR' Name='SourceDir'>
            <!-- Add System32 directory reference -->
            <Directory Id='SystemFolder' Name='System32' />
            
            <Directory Id='$(var.PlatformProgramFilesFolder)' Name='PFiles'>
                <Directory Id='APPLICATIONFOLDER' Name='NAS Boot Client'>
                    <Component Id='License' Guid='*'>
                        <File Id='LicenseFile'
                            DiskId='1'
                            Source='wix\License.rtf'
                            KeyPath='yes' />
                    </Component>

                    <Directory Id='Bin' Name='bin'>

                        <Component Id='binary0' Guid='*'>
                            <File
                                Id='exe0'
                                Name='nas-boot-client.exe'
                                DiskId='1'
                                Source='$(var.CargoTargetBinDir)\nas-boot-client.exe'
                                KeyPath='yes' />

                            <!-- Service installation with LocalSystem account -->
                            <ServiceInstall
                                Id="ServiceInstaller"
                                Type="ownProcess"
                                Name="NASBootClient"
                                DisplayName="NAS Boot Client"
                                Description="Monitors user activity and manages NAS power state"
                                Start="auto"
                                ErrorControl="normal"
                                Account="LocalSystem">
                            </ServiceInstall>

                            <!-- Service control with proper shutdown handling -->
                            <ServiceControl
                                Id="StartService"
                                Start="install"
                                Stop="both"
                                Remove="uninstall"
                                Name="NASBootClient"
                                Wait="yes" />
                        </Component>
                    </Directory>
                </Directory>
            </Directory>

            <!-- Add configuration directory in user profile -->
            <Directory Id="CommonAppDataFolder" Name="ProgramData">
                <Directory Id="ConfigDir" Name="NASBootClient">
                    <Component Id="ConfigFolder" Guid="A1B2C3D4-E5F6-7890-ABCD-EF1234567890">
                        <CreateFolder>
                            <Permission User="Everyone" GenericAll="yes" />
                        </CreateFolder>

                        <!-- Install the configuration file -->
                        <File Id="ConfigFile"
                            Name="nas-boot-client-config.yaml"
                            DiskId="1"
                            Source="wix\nas-boot-client-config.yaml"
                            KeyPath="yes" />

                        <RemoveFolder Id="ConfigDirRemove" On="uninstall" />
                        <!-- Fix the RemoveFolderEx property -->
                        <util:RemoveFolderEx Id="ConfigFolderCleanup" On="uninstall" Property="CONFIGDIR" />
                    </Component>
                </Directory>
            </Directory>
        </Directory>

        <!-- Custom actions for service management with elevated privileges -->
        <CustomAction Id="StopServiceAction"
            Directory="SystemFolder"
            ExeCommand="cmd.exe /c &quot;net stop NASBootClient 2&gt;nul || sc stop NASBootClient 2&gt;nul || echo Service already stopped&quot;"
            Execute="deferred"
            Impersonate="no"
            Return="ignore" />

        <CustomAction Id="RemoveServiceAction"
            Directory="SystemFolder"
            ExeCommand="cmd.exe /c &quot;sc delete NASBootClient 2&gt;nul || echo Service already removed&quot;"
            Execute="deferred"
            Impersonate="no"
            Return="ignore" />

        <Feature
            Id='Complete'
            Title='NAS Boot Client'
            Description='Installs the NAS Boot Client service.'
            Level='1'
            ConfigurableDirectory='APPLICATIONFOLDER'
            AllowAdvertise='no'
            Display='expand'
            Absent='disallow'>

            <ComponentRef Id='License' />
            <ComponentRef Id='binary0' />
            <ComponentRef Id='ConfigFolder' />
        </Feature>

        <!-- Updated InstallExecuteSequence with proper sequencing for deferred actions -->
        <InstallExecuteSequence>
            <!-- Stop service before standard service control actions -->
            <Custom Action="StopServiceAction" After="StopServices">REMOVE="ALL"</Custom>
            
            <!-- Remove service after stopping -->
            <Custom Action="RemoveServiceAction" After="StopServiceAction">REMOVE="ALL"</Custom>
        </InstallExecuteSequence>

        <SetProperty Id='ARPINSTALLLOCATION' Value='[APPLICATIONFOLDER]' After='CostFinalize' />

        <Property Id='ARPHELPLINK' Value='https://github.com/user/nas-boot-client' />

        <UI>
            <UIRef Id='WixUI_FeatureTree' />
        </UI>

        <WixVariable Id='WixUILicenseRtf' Value='wix\License.rtf' />
    </Product>
</Wix>